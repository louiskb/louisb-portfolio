 <!-- Tech stack -->
<section id="tech-stack">
  <div class="container">
    <h2 class="mb-3">Technology and skills</h2>
    <h4 class="fs-5 mb-2">What I'm good at</h4>
    <div class="row">
      <div class="col-12 col-md-4">
        <h5 class="fs-6">Frontend</h5>
        <div class="d-flex justify-content-start align-items-center">
          <%= link_to "https://developer.mozilla.org/en-US/docs/Web/JavaScript", target: "_blank", rel: "noopener" do %>
            <%= image_tag "javascript.svg", alt: "JavaScript icon", class: "tech-icon p-3" %>
          <% end %>
          <%= link_to "https://developer.mozilla.org/en-US/docs/Web/HTML", target: "_blank", rel: "noopener" do %>
            <%= image_tag "html5.svg", alt: "HTML 5 icon", class: "tech-icon p-3" %>
          <% end %>
          <%= link_to "https://developer.mozilla.org/en-US/docs/Web/CSS", target: "_blank", rel: "noopener" do %>
            <%= image_tag "css3.svg", alt: "CSS 3 icon", class: "tech-icon p-3" %>
          <% end %>
        </div>
        <div class="d-flex justify-content-start align-items-center">
          <%= link_to "https://sass-lang.com/", target: "_blank", rel: "noopener" do %>
            <%= image_tag "sass.svg", alt: "Sass icon", class: "tech-icon p-3" %>
          <% end %>
          <%= link_to "https://getbootstrap.com/", target: "_blank", rel: "noopener" do %>
            <%= image_tag "bootstrap.svg", alt: "Bootstrap icon", class: "tech-icon p-3" %>
          <% end %>
        </div>
      </div>
      <div class="col-12 col-md-8">
        <h5 class="fs-6">Backend</h5>
        <div class="d-flex justify-content-start align-items-center">
          <%= link_to "https://www.ruby-lang.org/en/", target: "_blank", rel: "noopener" do %>
            <%= image_tag "ruby.svg", alt: "Ruby icon", class: "tech-icon p-3" %>
          <% end %>
          <%= link_to "https://www.postgresql.org/", target: "_blank", rel: "noopener" do %>
            <%= image_tag "postgresql.svg", alt: "PostgreSQL icon", class: "tech-icon p-3" %>
          <% end %>
          <%= link_to "https://rspec.info/", target: "_blank", rel: "noopener" do %>
            <%= image_tag "rspec.svg", alt: "Rspec icon", class: "tech-icon p-3" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12 col-md-4">
        <h5 class="fs-6 mt-3">Frameworks & libraries</h5>
        <div class="d-flex justify-content-start align-items-center">
          <%= link_to "https://rubyonrails.org/", target: "_blank", rel: "noopener" do %>
            <%= image_tag "ruby-on-rails.svg", alt: "Ruby-on-rails icon", class: "tech-icon p-3" %>
          <% end %>
        </div>
      </div>
      <div class="col-12 col-md-8">
        <h5 class="fs-6 mt-3">Tools</h5>
        <div class="d-flex justify-content-start align-items-center">
          <%= link_to "https://www.github.com/", target: "_blank", rel: "noopener" do %>
            <%= image_tag "github.svg", alt: "Github icon", class: "tech-icon p-3" %>
          <% end %>
          <%= link_to "https://www.figma.com/", target: "_blank", rel: "noopener" do %>
            <%= image_tag "figma.svg", alt: "Figma icon", class: "tech-icon p-3" %>
          <% end %>
          <%= link_to "https://openai.com/api/", target: "_blank", rel: "noopener" do %>
            <%= image_tag "ai-dark.svg", alt: "Third-party AI icon linking to OpenAI", class: "tech-icon p-3" %>
          <% end %>
        </div>
      </div>
    </div>
    <h4 class="fs-5 mt-3 mb-2">What I'm learning</h4>
    <div class="row">
      <div class="col-12 col-md-6">
        <h5 class="fs-6">Frameworks & libraries</h5>
        <div class="d-flex justify-content-start align-items-center">
          <%= link_to "https://react.dev", target: "_blank", rel: "noopener" do %>
            <%= image_tag "react.svg", alt: "React icon", class: "tech-icon p-3" %>
          <% end %>
          <%= link_to "https://vuejs.org", target: "_blank", rel: "noopener" do  %>
            <%= image_tag "vuejs.svg", alt: "Vue.js icon", class: "tech-icon p-3" %>
          <% end %>
        </div>
      </div>
    </div>
    <hr class="my-5">
  </div>
</section>
