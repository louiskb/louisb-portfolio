<!-- Contact -->
<section id="contact">
  <div class="container">
    <div class="card shadow-sm rounded-4 my-3">
      <div class="card-body p-4">
        <h2 class="mb-3">Contact me</h2>
        <p class="card-text mb-5">Want to collaborate or discuss a project? <br>
          <br>
          Fill out the form below or email me directly at
          <%= link_to "dev@louisbourne.me", "mailto:dev@louisbourne.me", target: "_blank", class: "text-decoration-none" %>. <br>
          <br>
          Currently open to fullâ€‘time roles and new opportunities, and also taking on <%= link_to "Fiverr", "https://www.fiverr.com/s/LdGw534", target: "_blank", class: "text-decoration-none" %> projects to build Ruby on Rails apps, MVPs, and custom products.
        </p>
        <!-- Contact form -->
       <%= simple_form_for @contact, url: contacts_path, local: true, data: { controller: "load-button" }, class: "mb-2" do |f| %>
        <div class="row">
          <div class="col-12 col-md-6">
            <%= f.input :first_name, label: "First Name" %>
          </div>
          <div class="col-12 col-md-6">
            <%= f.input :last_name, label: "Last Name" %>
          </div>
        </div>
        <%= f.input :email, label: "Your Email" %>
        <%= f.input :message, as: :text, rows: 6, label: "Message" %>
        <!-- Hp -->
        <%= invisible_captcha %>
        <!-- Submit button -->
        <%= f.button :submit, "Send Message", data: { action: "click->load-button#loader" }, class: "btn btn-primary btn-lg rounded-5 mb-4 mt-4" %>
       <% end %>
      </div>
    </div>
  </div>
</section>
