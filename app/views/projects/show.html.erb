<!-- Project Show -->
<%= render "project_hero_banner", project: @project %>
<div class="container">
  <section class="project-show">
    <% if @project.personal_project %>
      <h2 class="mt-5 mb-4">Personal project</h2>
    <% else %>
      <h2 class="mt-5 mb-4">Open source contributions</h2>
    <% end %>
    <ul class="fs-5">
      <li class="text-dark">
        <% if @project.personal_project %>
          Personal project: <span class="text-success fw-semibold">YES</span>
        <% else %>
          Personal project: <span class="text-info fw-semibold">NO</span>
        <% end %>
      </li>
      <li class="text-dark">
        <% if @project.private_repo %>
          Github Repo: <span class="text-danger fw-semibold">Private</span>
        <% else %>
          Github Repo: <span class="text-primary fw-semibold">Public</span>
        <% end %>
      </li>
      <li>
        <span class="text-dark">Project description:</span> <%= @project.description.capitalize %>
      </li>
      <li>
        <span class="text-dark">Tech stack:</span> <%= @project.tech_stack %>
      </li>
      <li>
        <span class="text-dark">Image url:</span> <%= @project.img_url %>
      </li>
      <li>
        <span class="text-dark">Github url:</span> <%= @project.github_url %>
      </li>
      <li>
        <span class="text-dark">Project url:</span> <%= @project.project_url %>
      </li>
    </ul>
    <div class="d-flex justify-content-between align-items-center gap-3 mt-5 mb-3">
      <div>
        <%= link_to "Back to Projects", projects_path, class: "btn btn-outline-dark rounded-4" %>
      </div>
      <div class="d-flex gap-4 align-items-center">
        <%= link_to edit_project_path(@project), class: "btn btn-primary rounded-4" do %>
          <i class="fa-solid fa-pen-to-square"></i> Edit
        <% end %>
        <%= link_to project_path(@project), data: { turbo_method: :delete, turbo_confirm: "Delete project ?" }  do %>
          <i class="fa-regular fa-trash-can text-danger fs-3"></i>
        <% end %>
      </div>
    </div>
  </section>
</div>
